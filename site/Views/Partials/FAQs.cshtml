@inherits Umbraco.Web.Mvc.UmbracoTemplatePage

	
	
@foreach(var item in @Umbraco.Content(1075).Descendants().Where("Visible").Where("Level <= 4")){

	
	<h2>@item.name</h2>
		
	foreach(var item2 in @item.Descendants().Where("Visible").Where("Level <= 5")){	
	
		<div class="accord">
			<a class="trigger" href="#"><span>+</span> @Html.Raw(item2.name)</a>
			<div class="reveal">@item2.answers</div>          
		</div>
	
	}

}